<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/fgt.css" />
    <title>Forget Password</title>
    <style>
        .header {
            height: 80px;
            background-color: #79fa8a;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
        }
        * {
            padding: 0;
            margin: 0;
        }
        .basecontener {
            padding: 4%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .subcontainer {
            margin: 0;
            padding: 10px;
            display: flex;
            flex-direction: column;
            background-color: lightgray;
            height: 300px;
            width: 300px;
            align-items: center;
            justify-content: center;
            border-radius: 20px;
        }
        form {
            margin: 0;
            padding: 0;
        }
        .pass_con {
            padding: 5px;
        }
        p {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: #1cad48;
        }
        .btn {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 5px;
        }
        .submit_button {
            background-color: #04AA6D;
            border: none;
            color: white;
            padding: 10px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 50px;
        }
        input {
            width: 100%;
            border-radius: 10px;
            border: none;
            background-color: #f0f0f0;
        }
        input[type=password] {
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
        }
    </style>

    <script>
        function submitForm() {
            const p = document.getElementById('password').value;
            const c = document.getElementById('cmpassword').value;
            if (String(p).length <= 5) {
                alert("Passwords length less then 6");
                return false;
            }
            if (p !== c) {
                alert("Passwords do not match!");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
    <div class="header">
        <h3>Forget Password</h3>
    </div>
    <div class="basecontener">
        <div class="subcontainer">
            <form action="/api/v1/auth/confirm-password" method="post" onsubmit="return submitForm()">
                <input type="hidden" id="token" name="token" value="<%=id%>">
                <div class="pass_con">
                    <p class="text">Password</p>
                    <input type="password" name="password" id="password" class="pass" required><br>
                </div>
                <div class="pass_con">
                    <p class="text">Confirm Password</p>
                    <input type="password" name="cmpassword" id="cmpassword" class="pass" required><br>
                </div>
                <div class="btn">
                    <button type="submit" class="submit_button">SUBMIT</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
